rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User's vehicles - private to each user
    match /users/{userId}/vehicles/{vehicleId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User's fuel entries
    match /users/{userId}/fuel_entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User's maintenance records
    match /users/{userId}/maintenance/{recordId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
